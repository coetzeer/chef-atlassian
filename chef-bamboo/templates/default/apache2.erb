  <% virtual_host_aliases = node['devtool']['apache2']['virtual_host_alias'].kind_of?(Array) ? node['devtool']['apache2']['virtual_host_alias'] : [ node['devtool']['apache2']['virtual_host_alias'] ] -%>
  <% virtual_host_aliases.each do |virtual_host_alias| -%>
  ServerAlias <%= virtual_host_alias %>
  <% end -%>
  <% end -%>
  DocumentRoot <%= node['bpl']['devtool']['install_home'] %>

  CustomLog <%= node['devtool']['apache2']['ssl']['access_log'].empty? ? node['apache']['log_dir']+"/"+node['bpl']['devtool']['name']+"-ssl-access.log" : node['devtool']['apache2']['ssl']['access_log'] %> combined
  ErrorLog <%= node['devtool']['apache2']['ssl']['error_log'].empty? ? node['apache']['log_dir']+"/"+node['bpl']['devtool']['name']+"-ssl-error.log" : node['devtool']['apache2']['ssl']['error_log'] %>
  LogLevel warn

  <Proxy *>
    Order Deny,Allow
    Allow from all
  </Proxy>
    ProxyRequests           Off
  ProxyPreserveHost       On
  ProxyPass        /<%= node['bpl']['devtool']['name'] %> http://localhost:<%= node['devtool']['tomcat']['port'] %>/<%= node['bpl']['devtool']['name'] %> connectiontimeout=5 timeout=300
